[Desktop Entry]
Type=Service
MimeType=video/*
Icon=audio-x-generic
Actions=mp3;flac;
X-KDE-Priority=TopLevel
X-KDE-StartupNotify=false
X-KDE-Submenu=Actions
X-KDE-Submenu[ru]=Действия

[Desktop Action mp3]
Name=Extract → MP3
Name[ru]=Извлечь звук → MP3
Icon=audio-mp3
TryExec=ffmpeg
Exec=file=%f; ffmpeg -i "%f" "${file%.*}.mp3"

[Desktop Action flac]
Name=Extract → FLAC
Name[ru]=Извлечь звук → FLAC
Icon=audio-x-flac
TryExec=ffmpeg
Exec=file=%f; ffmpeg -i "%f" -c:a flac "${file%.*}.flac"
